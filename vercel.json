{
  "version": 2,
  "builds": [
    {
      "src": "vercel.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "app/static/**",
          "app/translations/**",
          "app/templates/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "app/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "vercel.py"
    }
  ]
}